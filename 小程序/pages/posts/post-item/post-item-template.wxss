.post-container{
  display: flex;
  flex-direction: column;
  margin:20rpx 0 40rpx 0;
  background-color: #fff;
  border-top:1px solid #ededed;
  border-bottom:1px solid #ededed;
  padding-bottom:10rpx;
}

.post-author-date{
  margin:10rpx 0 20rpx 10rpx;
  /* 垂直居中 也可以使用弹性盒子 */
  display: flex;
  flex-direction: row;
  align-items: center;
}

.post-author{
  width:60rpx;
  height:60rpx;
  /* 垂直居中 */
  /* vertical-align: middle; */
}

.post-date{
  margin-left:20rpx;
  font-size:30rpx;
}

.post-title{
  font-size:34rpx;
  font-weight: 600;
  margin:0 0 10px 10px;
  color:#333;
}

.post-image{
  width:100%;
  height:340rpx;
  margin-bottom:15px;
}

.post-content{
  font-size:30rpx;
  color:#666;
  letter-spacing: 2rpx;
  margin:0 0 20rpx 20rpx;
}

.post-like{
  font-size:28rpx;
  margin-left:20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.post-like-image{
  width:32rpx;
  height:32rpx;
  margin-right:16rpx;
}

.post-like-font{
  margin-right:40rpx;
}