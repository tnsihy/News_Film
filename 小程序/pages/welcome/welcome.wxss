/* 可以从控制台的Wxml发现最外层是由<page>包裹 */
page{
  background-color: #b3d4db;
  height:100%;
}

.container{
  /* flex弹性盒子模型 */
  display: flex;
  /* 弹性盒子模型中垂直排列 */
  flex-direction: column;
  /* 弹性盒子模型中居中对齐 */
  align-items: center
}

.user-avatar{
  /* rpx自适应调整 不是所有的情况都可以使用rpx 当换成很小的屏幕时字体会变得很小不方便观看 */
  width: 200rpx;
  height:200rpx;
  margin-top:160rpx
}

.user-name{
  font-size:32rpx;
  font-weight:blod;
  margin-top:80rpx;
}

.moto-container{
  border:1px solid #405f80;
  border-radius: 5px;
  width:200rpx;
  height:80rpx;
  text-align: center;
  margin-top:200rpx;

}
.moto{
  font-size:25rpx;
  font-weight:blod;
  line-height: 80rpx;
  color:#405f80;
}